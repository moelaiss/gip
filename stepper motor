#include <Stepper.h> // Inclusief de Stepper bibliotheek voor het aansturen van de stepper motor

const int stepsPerRevolution = 2048;  // aantal stappen per revolutie van de motor

// Pins voor ULN2003 Motor Driver
#define IN1 19
#define IN2 18
#define IN3 5
#define IN4 17

// Creëer een instantie van de Stepper klasse met de opgegeven parameters
Stepper myStepper(stepsPerRevolution, IN1, IN3, IN2, IN4);

void setup() {
  // Stel de snelheid van de motor in op 5 omwentelingen per minuut
  myStepper.setSpeed(5);
  // Initialiseer de seriële poort voor communicatie met de computer
  Serial.begin(115200);
}

void loop() {
  // Stap voorwaarts (met de klok mee)
  Serial.println("clockwise"); // Print "clockwise" naar de seriële monitor
  myStepper.step(stepsPerRevolution); // Laat de motor een volledige omwenteling in de voorwaartse richting uitvoeren
  delay(1000); // Wacht 1 seconde

  // Stap achterwaarts (tegen de klok in)
  Serial.println("counterclockwise"); // Print "counterclockwise" naar de seriële monitor
  myStepper.step(-stepsPerRevolution); // Laat de motor een volledige omwenteling in de achterwaartse richting uitvoeren
  delay(1000); // Wacht 1 seconde
}


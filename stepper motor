#include <Stepper.h>

const int stepsPerRevolution = 2048;  // stappen per revolutie

// ULN2003 Motor Driver Pins
#define IN1 19
#define IN2 18
#define IN3 5
#define IN4 17

// stepper library
Stepper myStepper(stepsPerRevolution, IN1, IN3, IN2, IN4);

void setup() {
  // 5 rpm
  myStepper.setSpeed(5);
  // initialize the serial port
  Serial.begin(115200);
}

void loop() {
  // een directie :
  Serial.println("clockwise");
  myStepper.step(stepsPerRevolution);
  delay(1000);

  // andere directie :
  Serial.println("counterclockwise");
  myStepper.step(-stepsPerRevolution);
  delay(1000);
}
